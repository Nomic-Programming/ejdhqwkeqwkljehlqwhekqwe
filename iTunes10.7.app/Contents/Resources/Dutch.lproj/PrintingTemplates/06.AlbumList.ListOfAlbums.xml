<?xml version="1.0" encoding="utf-8"?>
<theme>
	<themeName>Lijst met albums</themeName>
	<themeExplanation>Hiermee drukt u albums uit uw geselecteerde afspeellijst of bibliotheek af, gesorteerd op artiest. Titels van nummers worden niet afgedrukt.</themeExplanation>
	<themeKind>albumlist</themeKind>
	<themeInternalKind>playlist</themeInternalKind>
	<themeSortOrder>2</themeSortOrder>
	<themeMediaIndex>1</themeMediaIndex>
	<albumlist>
		<column>
			<field>artistName</field>
			<resizable />
			<width>50</width>
		</column>
		<column>
			<field>albumName</field>
			<resizable />
			<width>50</width>
		</column>
		<column>
			<columnName>Aantal onderdelen</columnName>
			<field>trackNumber</field>
			<width>25</width>
		</column>
		<column>
			<columnName>Totale tijd</columnName>
			<field>totalTime</field>
			<width>50</width>
		</column>
	</albumlist>
</theme>