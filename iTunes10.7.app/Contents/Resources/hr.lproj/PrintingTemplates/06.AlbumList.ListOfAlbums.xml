<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<themeName>Popis albuma</themeName>
	<themeExplanation>Ispisuje albume iz odabrane reprodukcijske liste ili medijateke, razvrstane prema izvođaču. Ne ispisuje naslove pjesama.</themeExplanation>
	<themeKind>albumlist</themeKind>
	<themeInternalKind>playlist</themeInternalKind>
	<themeSortOrder>2</themeSortOrder>
	<themeMediaIndex>1</themeMediaIndex>
	<albumlist>
		<column>
			<field>artistName</field>
			<resizable />
			<width>50</width>
		</column>
		<column>
			<field>albumName</field>
			<resizable />
			<width>50</width>
		</column>
		<column>
			<columnName># Items</columnName>
			<field>trackNumber</field>
			<width>25</width>
		</column>
		<column>
			<columnName>Total Time</columnName>
			<field>totalTime</field>
			<width>50</width>
		</column>
	</albumlist>
</theme>
