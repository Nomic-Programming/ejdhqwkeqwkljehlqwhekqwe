<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<themeName>Liste d’albums</themeName>
	<themeExplanation>Cette option permet d’imprimer les albums de la bibliothèque ou de la liste de lecture sélectionnée, triés par artiste. L’impression n’inclut pas les titres des morceaux.</themeExplanation>
	<themeKind>albumlist</themeKind>
	<themeInternalKind>playlist</themeInternalKind>
	<themeSortOrder>2</themeSortOrder>
	<themeMediaIndex>1</themeMediaIndex>
	<albumlist>
		<column>
			<field>artistName</field>
			<resizable />
			<width>50</width>
		</column>
		<column>
			<field>albumName</field>
			<resizable />
			<width>50</width>
		</column>
		<column>
			<columnName>Nombre d’éléments</columnName>
			<field>trackNumber</field>
			<width>25</width>
		</column>
		<column>
			<columnName>Durée totale</columnName>
			<field>totalTime</field>
			<width>50</width>
		</column>
	</albumlist>
</theme>
