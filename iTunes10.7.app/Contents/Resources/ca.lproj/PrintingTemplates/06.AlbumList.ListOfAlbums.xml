<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<themeName>Llista d’àlbums</themeName>
	<themeExplanation>Imprimeix els àlbums de la biblioteca o de la llista de reproducció seleccionada, classificats per artista. No imprimeix els títols de les cançons.</themeExplanation>
	<themeKind>albumlist</themeKind>
	<themeInternalKind>playlist</themeInternalKind>
	<themeSortOrder>2</themeSortOrder>
	<themeMediaIndex>1</themeMediaIndex>
	<albumlist>
		<column>
			<field>artistName</field>
			<resizable />
			<width>50</width>
		</column>
		<column>
			<field>albumName</field>
			<resizable />
			<width>50</width>
		</column>
		<column>
			<columnName>Núm. d’ítems</columnName>
			<field>trackNumber</field>
			<width>25</width>
		</column>
		<column>
			<columnName>Temps total</columnName>
			<field>totalTime</field>
			<width>50</width>
		</column>
	</albumlist>
</theme>
