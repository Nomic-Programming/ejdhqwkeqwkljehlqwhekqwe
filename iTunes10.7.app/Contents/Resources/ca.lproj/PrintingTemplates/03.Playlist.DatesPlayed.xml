<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<themeName>Dates de reproducció</themeName>
	<themeExplanation>Imprimeix el títol, la durada, el nom de l’artista, el títol de l’àlbum i les dates i el nombre de reproduccions de les cançons de la biblioteca o de la llista de reproducció seleccionada.</themeExplanation>
	<themeKind>playlist</themeKind>
	<themeSortOrder>3</themeSortOrder>
	<themeMediaIndex>2</themeMediaIndex>
	<playlist>
		<column>
			<field>trackName</field>
			<resizable />
			<width>50</width>
		</column>
		<column>
			<field>totalTime</field>
			<width>40</width>
		</column>
		<column>
			<field>albumName</field>
			<resizable />
			<width>50</width>
		</column>
		<column>
			<field>artistName</field>
			<resizable />
			<width>50</width>
		</column>
		<column>
			<field>playDate</field>
			<resizable />
			<width>30</width>
		</column>
		<column>
			<field>playCount</field>
			<width>50</width>
		</column>
	</playlist>
</theme>
